{
	"name": "grifart/geocoding-client",
	"description": "Client for geocoding API of mapy.cz.",
	"type": "library",
	"license": "MIT",
	"authors": [
		{
			"name": "GRIFART, spol. s r.o.",
			"email": "grifart@grifart.cz"
		}
	],
	"scripts": {
		"phpstan": "phpstan analyze --level=max src"
	},
	"minimum-stability": "stable",
	"require": {
		"php": ">=8.0",
		"ext-json": "*",
		"ext-simplexml": "*"
	},
	"require-dev": {
		"nette/tester": "^2.3",
		"phpstan/phpstan": "^1.10",
		"tracy/tracy": "^2.8"
	},
	"autoload": {
		"psr-4": {
			"Grifart\\GeocodingClient\\": "src/"
		},
		"classmap": ["src/MapyCz/exceptions.php"]
	},
	"config": {
		"sort-packages": true
	}
}
